{
  "manifest_version": 3,
  "name": "LinkedIn Job Logger",
  "version": "1.0.0",
  "description": "Automate job application workflow with local folder creation and PDF generation",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "nativeMessaging"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Job Logger"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "settings.html"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}